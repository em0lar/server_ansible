server {
    listen 80;
    listen [::]:80;
    server_name bechilli.de www.bechilli.de;
    root /var/www/bechilli.de/bechilli.de;
    {% include './templates/helpers/ssl_redirect.conf.j2' %}
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name bechilli.de www.bechilli.de;
    location / {
        try_files $uri $uri/ /index.php?$args;
    }
    root /var/www/bechilli.de/bechilli.de;
    {% include './templates/helpers/php.conf.j2' %}
    {% include './templates/helpers/general.conf.j2' %}
    {% include './templates/helpers/ssl_hsts.conf.j2' %}
    {% include './templates/helpers/ssl_domains_bechilli_de.conf.j2' %}
}