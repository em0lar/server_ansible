APP_NAME = LabCode Git
RUN_USER = gitea
RUN_MODE = prod

[oauth2]
JWT_SECRET = {{ gitea_jwt_secret }}

[security]
INTERNAL_TOKEN = {{ gitea_internal_token }}
INSTALL_LOCK   = true
SECRET_KEY     = {{ gitea_secret_key }}

[database]
DB_TYPE  = postgres
HOST     = rhea.int.sgb.de.labcode.de:5432
NAME     = gitea
USER     = gitea
PASSWD   = {{ gitea_db_password }}
SSL_MODE = disable

[repository]
ROOT = /opt/gitea/data/repositories
DEFAULT_PRIVATE = public

[repository.upload]
TEMP_PATH = /opt/gitea/data/uploads

[server]
SSH_DOMAIN       = git.labcode.dev
DOMAIN           = git.labcode.dev
HTTP_PORT        = 40000
ROOT_URL         = https://git.labcode.dev/
DISABLE_SSH      = false
START_SSH_SERVER = true
SSH_PORT         = 222
SSH_LISTEN_PORT  = 222

[session]
PROVIDER_CONFIG = /opt/gitea/data/sessions
PROVIDER        = file

[picture]
AVATAR_UPLOAD_PATH      = /opt/gitea/data/avatars
REPOSITORY_AVATAR_UPLOAD_PATH = /opt/gitea/data/repo-avatars
DISABLE_GRAVATAR        = false
ENABLE_FEDERATED_AVATAR = true

[attachment]
PATH = /opt/gitea/data/attachments

[log]
ROOT_PATH = /opt/gitea/log
MODE      = file
LEVEL     = info

[service]
REGISTER_EMAIL_CONFIRM            = false
ENABLE_NOTIFY_MAIL                = false
DISABLE_REGISTRATION              = true
ALLOW_ONLY_EXTERNAL_REGISTRATION  = false
ENABLE_CAPTCHA                    = false
REQUIRE_SIGNIN_VIEW               = false
DEFAULT_KEEP_EMAIL_PRIVATE        = false
DEFAULT_ALLOW_CREATE_ORGANIZATION = true
DEFAULT_ENABLE_TIMETRACKING       = true
NO_REPLY_ADDRESS                  = noreply.example.org

[mailer]
ENABLED = true
HOST    = {{ smtp_host }}
FROM    = {{ smtp_from }}
USER    = {{ smtp_user }}
PASSWD  = {{ smtp_password }}

[openid]
ENABLE_OPENID_SIGNIN = false
ENABLE_OPENID_SIGNUP = false

[time]
DEFAULT_UI_LOCATION = Europe/Berlin

[other]
SHOW_FOOTER_VERSION = false