config dnsmasq
	option domainneeded '1'
	option localise_queries '1'
	option rebind_protection '0'
	option local '/int.sig.de.labcode.de/'
	option domain 'int.sig.de.labcode.de'
	option expandhosts '1'
	option authoritative '1'
	option readethers '1'
	option leasefile '/root/dhcp.leases'
	option resolvfile '/tmp/resolv.conf.auto'
	option localservice '1'
	option sequential_ip '1'
	option cachesize '0'
	option nonegcache '1'
	option dnsforwardmax '1024'
	list server '10.151.0.3'
	list interface 'wgserver'
	list interface 'br-lan'
	list interface 'br-lanencladus'
	list interface 'br-lantethys'

config dhcp 'wan'
	option interface 'wan'
	option ignore '1'

config dhcp 'lan'
	option interface 'lan'
	option start '10.151.2.1'
	option limit '253'
	option leasetime '2d'
	option dhcpv6 'server'
	option ra 'server'
	option ra_management '1'

config dhcp 'lantethys'
	option interface 'lantethys'
	option start '10.151.4.1'
	option limit '253'
	option leasetime '24d'
	option dhcpv6 'server'
	option ra 'server'
	option ra_management '1'

config dhcp 'lanencladus'
	option interface 'lanencladus'
	option start '10.151.5.1'
	option limit '253'
	option leasetime '24d'
	option dhcpv6 'server'
	option ra 'server'
	option ra_management '1'

config odhcpd 'odhcpd'
	option maindhcp '0'
	option leasefile '/tmp/hosts/odhcpd'
	option leasetrigger '/usr/sbin/odhcpd-update'
	option loglevel '4'

{% for host in router_static_hosts %}
config host
	option name '{{ host.name }}'
	option dns '1'
	option ip '{{ host.v4 }}'
	option mac '{{ host.mac }}'
{% if host.hostid is defined %}
	option hostid '{{ host.hostid }}'
{% endif %}
{% endfor %}
